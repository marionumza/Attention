<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" name="dynamic_reports assets"
              inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                  href="/om_dynamic_reports/static/src/css/report_controller.css"/>
            <script type="text/javascript"
                    src="/om_dynamic_reports/static/src/js/jquery-resizable.js"/>
            <script type="text/javascript"
                    src="/om_dynamic_reports/static/src/js/dynamic_reports.js"/>
            <script type="text/javascript"
                    src="/om_dynamic_reports/static/src/js/dynamic_reports_print.js"/>
        </xpath>
    </template>

    <template id="report_assets" inherit_id="web.report_assets_common"
              name="OM Report Assets">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                  href="/om_dynamic_reports/static/src/css/report_controller.css"/>
        </xpath>
    </template>
</odoo>
